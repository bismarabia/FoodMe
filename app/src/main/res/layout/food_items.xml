<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:weightSum="7">

        <ImageView
            android:id="@+id/food_photo"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginRight="16dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/me" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_name"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Lahmacun"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/food_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5TL"
                android:textColor="#d13400"
                android:textSize="25sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right"
            android:orientation="horizontal">

            <com.cuboid.cuboidcirclebutton.CuboidButton
                android:id="@+id/addToCartBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:text="Add To \nCart"
                android:textColor="#e8e8f7"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cub_border_radius="0dp"
                app:cub_color="#ed2f2f"
                app:cub_hover_color="#e9b755" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>